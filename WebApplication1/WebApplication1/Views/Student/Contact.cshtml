
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Contact</title>
</head>
<body>
    <div>
        <h2>This is a Contact page</h2>
        <a href="~/Student/Index">Home</a>
        <a href="~/Student/About">About</a>
        <br />
        <br />
        <form method="post" action="">
            <div style="border:1px solid black; width:fit-content; padding:20px">

                @using (Html.BeginForm("Contact", "Stu@*dent", FormMethod.Post))
