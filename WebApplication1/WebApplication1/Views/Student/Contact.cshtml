                    <button class="btn btn-outline-primary" name="btn" type="submit" value="add">add</button>
                    <button class="btn btn-outline-primary" name="btn" type="submit" value="sub">sub</button>
                    <button class="btn btn-outline-primary" name="btn" type="submit" value="mul">mul</button>
                    <button class="btn btn-outline-primary" name="btn" type="submit" value="div">div</button>
                </div><br />
                <h3>Result: @ViewBag.Result</h3>
            </div>
        

         
        </form>

    </div>
</body>
</html>
